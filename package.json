{
    "name": "blockchain-ecosystem-app",
    "version": "1.0.0",
    "description": "Desktop app for blockchain ecosystem with mining, wallet, and P2P messaging",
    "main": "electron/main.js",
    "scripts": {
        "dev": "electron .",
        "build": "npm run build:backend && npm run build:frontend",
        "build:backend": "cd backend && tsc",
        "build:frontend": "cd frontend && npm run build",
        "build:mac": "npm run build && electron-builder --mac",
        "build:win": "npm run build && electron-builder --win",
        "build:all": "npm run build && electron-builder --mac --win"
    },
    "keywords": [
        "blockchain",
        "electron",
        "desktop",
        "p2p"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@types/elliptic": "^6.4.18",
        "bip39": "^3.1.0",
        "body-parser": "^1.20.2",
        "cors": "^2.8.5",
        "crypto-js": "^4.2.0",
        "elliptic": "^6.6.1",
        "express": "^4.18.2",
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "react-router-dom": "^7.9.6",
        "ws": "^8.14.2"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/crypto-js": "^4.2.2",
        "@types/express": "^4.17.21",
        "@types/node": "^20.10.0",
        "@types/react": "^19.2.5",
        "@types/react-dom": "^19.2.3",
        "@types/ws": "^8.5.10",
        "@vitejs/plugin-react": "^5.1.1",
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.3.2",
        "vite": "^7.2.4"
    },
    "build": {
        "appId": "com.blockchain.ecosystem",
        "productName": "Blockchain Ecosystem",
        "directories": {
            "output": "dist"
        },
        "files": [
            "electron/**/*",
            "backend/**/*",
            "frontend/dist/**/*",
            "node_modules/**/*"
        ],
        "mac": {
            "category": "public.app-category.finance",
            "target": [
                "dmg"
            ],
            "identity": null
        },
        "win": {
            "target": [
                "nsis"
            ]
        }
    }
}